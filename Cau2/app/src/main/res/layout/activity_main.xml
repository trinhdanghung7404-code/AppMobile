<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt vé"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="8dp"/>

        <!-- Họ và tên -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Họ và tên"
            android:inputType="textPersonName"
            android:padding="10dp"/>

        <!-- Điện thoại -->
        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Điện thoại"
            android:inputType="phone"
            android:padding="10dp"
            android:layout_marginTop="8dp"/>

        <!-- Loại vé -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại vé:"
            android:layout_marginTop="12dp"/>

        <RadioGroup
            android:id="@+id/rgTicketType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbFirst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hạng nhất (1.500.000 VND)"/>

            <RadioButton
                android:id="@+id/rbBusiness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thương gia (1.300.000 VND)"/>

            <RadioButton
                android:id="@+id/rbEconomy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phổ thông (1.000.000 VND)"
                android:checked="true"/>
        </RadioGroup>

        <!-- Số lượng -->
        <EditText
            android:id="@+id/etQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số lượng vé"
            android:inputType="number"
            android:padding="10dp"
            android:layout_marginTop="8dp"/>

        <!-- Ưu đãi (%) -->
        <EditText
            android:id="@+id/etDiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ưu đãi (%) - ví dụ 10 cho 10%"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:layout_marginTop="8dp"/>

        <!-- Rating -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đánh giá (Rating):"
            android:layout_marginTop="12dp"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:layout_marginTop="4dp"/>

        <!-- Nút đặt vé -->
        <Button
            android:id="@+id/btnBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đặt vé"
            android:layout_marginTop="16dp"/>

        <!-- Hiển thị kết quả -->
        <TextView
            android:id="@+id/tvRecordsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh sách đặt vé:"
            android:textStyle="bold"
            android:layout_marginTop="18dp"/>

        <TextView
            android:id="@+id/tvRecords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="#F4F4F4"
            android:textColor="#000000"
            android:layout_marginTop="6dp"/>
    </LinearLayout>
</ScrollView>
