<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Thuoc">

        <!-- MainActivity: màn hình mở đầu -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login -->
        <activity
            android:name=".view.LoginActivity"
            android:exported="true" />

        <!-- Register -->
        <activity
            android:name=".view.RegisterActivity"
            android:exported="true" />

        <!-- Manager Dashboard -->
        <activity
            android:name=".view.ManagerDashboardActivity"
            android:exported="true" />

        <activity
            android:name=".view.MedicineActivity"
            android:exported="true"/>

        <activity
            android:name=".view.UserMedicineActivity"
            android:exported="true"/>

        <activity
            android:name=".view.UserLoginActivity"
            android:exported="true"/>

    </application>

</manifest>
