<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Thuoc">

        <!-- MainActivity: màn hình mở đầu -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login -->
        <activity
            android:name=".view.ManagerLoginActivity"
            android:exported="true" />

        <!-- Register -->
        <activity
            android:name=".view.ManagerRegisterActivity"
            android:exported="true" />

        <!-- Manager Dashboard -->
        <activity
            android:name=".view.ManagerDashboardActivity"
            android:exported="true" />

        <activity
            android:name=".view.ManagerMedicineEditActivity"
            android:exported="true"/>

        <activity
            android:name=".view.ManagerUserMedicineEditActivity"
            android:exported="true"/>

        <activity
            android:name=".view.UserLoginActivity"
            android:exported="true"/>

        <activity
            android:name=".view.UserDashboardActivity"
            android:exported="true"/>
        <activity
            android:name=".view.ManagerAccountActivity"
            android:exported="true"/>
        <activity
            android:name=".view.ManagerMedicationHistoryActivity"
            android:exported="true"/>
        <receiver
            android:name=".service.AlarmReceiver"
            android:enabled="true"
            android:exported="true" />

        <service
            android:name=".service.VoiceListenerService"
            android:exported="false"
            android:foregroundServiceType="microphone" />


    </application>

</manifest>
