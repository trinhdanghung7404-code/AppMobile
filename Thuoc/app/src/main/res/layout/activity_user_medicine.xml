<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Nút back -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="Quay lại"
        android:src="@android:drawable/ic_menu_revert" />

    <!-- Tiêu đề: Tên thành viên -->
    <TextView
        android:id="@+id/tvTitleUserMedicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/btnBack"
        android:layout_alignTop="@id/btnBack"
        android:layout_centerHorizontal="true"
        android:text="Danh sách thuốc"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp" />

    <!-- RecyclerView danh sách thuốc -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewUserMedicine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnAddMedicine"
        android:layout_below="@id/btnBack"
        android:padding="8dp" />

    <!-- Nút thêm thuốc -->
    <Button
        android:id="@+id/btnAddMedicine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm thuốc"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp" />

</RelativeLayout>
